<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:text="新 用 户 注 册"
        android:textColor="#ffffff"
        android:textSize="36px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        android:gravity="center_horizontal"
        android:paddingLeft="10px"
        android:paddingRight="10px" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="#ffffff"
                    android:textSize="18px" />

                <EditText
                    android:id="@+id/et_regusername"
                    android:paddingLeft="5dip"
                    android:layout_width="262px"
                    android:layout_height="46px"
                    android:background="@drawable/reg_et" >
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密   码"
                    android:textColor="#ffffff"
                    android:textSize="18px" />

                <EditText
                    android:id="@+id/et_regpassword"
                    android:paddingLeft="5dip"
                    android:layout_width="262px"
                    android:layout_height="46px"
                    android:background="@drawable/reg_et"
                    android:ems="10"
                    android:inputType="textPassword" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码"
                    android:textColor="#ffffff"
                    android:textSize="18px" />

                <EditText
                    android:id="@+id/et_regpassword2"
                    android:paddingLeft="5dip"
                    android:layout_width="262px"
                    android:layout_height="46px"
                    android:background="@drawable/reg_et"
                    android:ems="10"
                    android:inputType="textPassword" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/bt_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="注   册"
                    android:textSize="24px" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>